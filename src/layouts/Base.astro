---
import "@fontsource-variable/bodoni-moda";
import "@fontsource-variable/raleway";

import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Signatures from "../components/common/Signatures.astro";

export interface Props {
	title: string;
	description: string;
	showSignatures?: boolean;
	noindex?: boolean;
}

const {
	title,
	description,
	showSignatures = true,
	noindex = false,
} = Astro.props;
---

<html lang="es-ES" class="scroll-smooth">
	<head>
		<Head title={title} description={description} noindex={noindex} />
		<style is:global>
			[x-cloak] {
				display: none !important;
			}

			body {
				background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
			}
		</style>
	</head>
	<body class="flex flex-col px-4 min-h-screen md:px-0 md:mx-20">
		<Header />

		<main class="border-b border-b-black grow">
			<slot />
		</main>

		{showSignatures && <Signatures />}

		<footer class="grid grid-cols-1 md:grid-cols-2 divide-x divide-black">
			<div class="text-center py-6">
				<a href="/politica-de-privacidad-y-aviso-legal/"
					>Política de privacidad y aviso legal</a
				>
			</div>
			<div class="text-center py-6">
				<a href="/politica-de-cookies/">Política de cookies</a>
			</div>
		</footer>
	</body>
</html>

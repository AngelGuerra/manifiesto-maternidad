---
import "@fontsource-variable/bodoni-moda";
import "@fontsource-variable/raleway";

import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
---

<html lang="es-ES" class="scroll-smooth">
	<head>
		<Head />
		<style is:global>
			[x-cloak] {
				display: none !important;
			}

			body {
				/* https://webgradients.com/ */

				/* background-color: #8ec5fc;
				background-image: linear-gradient(62deg, #8ec5fc 0%, #e0c3fc 100%); */

				/* background-color: #4158D0;
				background-image: linear-gradient(43deg, #4158D0 0%, #C850C0 46%, #FFCC70 100%); */

				/* background-color: #D9AFD9;
				background-image: linear-gradient(0deg, #D9AFD9 0%, #97D9E1 100%); */

				/* background-color: #0093E9;
				background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%); */

				background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
			}
		</style>
	</head>
	<body class="flex flex-col px-4 md:px-0 md:mx-20">
		<Header />

		<main class="border-b border-b-black">
			<slot />
		</main>

		<section class="py-8">
			<h3 class="text-4xl text-center">
				Texto para las personas que ya han firmado el manifiesto
			</h3>

			<div
				class="grid grid-cols-2 gap-4 justify-center items-center font-serif py-8 md:text-lg md:grid-cols-3"
			>
				<span class="md:text-center">Marie Curie</span>
				<span class="md:text-center">Virginia Woolf</span>
				<span class="md:text-center">Clara Zetkin</span>
				<span class="md:text-center">Clara Campoamor</span>
				<span class="md:text-center">Amelia Earhart</span>
				<span class="md:text-center">Frida Kahlo</span>
				<span class="md:text-center">Simone de Beauvoir</span>
				<span class="md:text-center">Ruth Bader Ginsburg</span>
				<span class="md:text-center">Audre Lorde</span>
			</div>
		</section>

		<footer
			class="border-t border-t-black grid grid-cols-3 divide-x divide-black"
		>
			<div class="text-center py-6"><a href="/">Política de privacidad</a></div>
			<div class="text-center py-6"><a href="/">Política de cookies</a></div>
			<div class="text-center py-6"><a href="/">Aviso legal</a></div>
		</footer>
	</body>
</html>

---

<div class="relative">
	<div x-data="{ openMenu: false }" @click.outside="openMenu = false" x-cloak>
		<div class="relative border-b border-b-black">
			<nav class="relative flex py-7 w-full items-center justify-around">
				<div class="flex flex-1 items-center justify-between">
					<a href="/" rel="home">TÍTULO DE LA WEB</a>

					<button
						type="button"
						class="inline-flex items-center justify-center rounded-md p-3 pr-0"
						aria-label="Menú principal"
						aria-haspopup="true"
						@click="openMenu = !openMenu"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="w-6 h-6"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
						</svg>
					</button>
				</div>
			</nav>
		</div>

		<div
			@click="openMenu = false"
			x-transition:enter="transition ease-out duration-150"
			x-transition:enter-start="opacity-0 transform scale-95"
			x-transition:enter-end="opacity-100 transform scale-100"
			x-transition:leave="transition ease-in duration-100"
			x-transition:leave-start="opacity-100 transform scale-100"
			x-transition:leave-end="opacity-0 transform scale-95"
			x-cloak
			:class="{'translate-y-0 shadow-md duration-150': openMenu, '-translate-y-full': !openMenu}"
			class="fixed inset-0 z-40 h-screen origin-top transform overflow-y-auto bg-black transition"
		>
			<div
				class="relative overflow-hidden bg-black"
				role="menu"
				aria-orientation="vertical"
			>
				<!-- {% comment %} Menu Header {% endcomment %} -->
				<div class="border-b border-b-white">
					<div class="py-7 md:mx-20 px-4 md:px-0">
						<div class="flex items-center justify-between">
							<a href="/" class="text-white" rel="home"> TÍTULO DE LA WEB</a>

							<button
								@click="openMenu = !openMenu"
								type="button"
								class="inline-flex items-center justify-center rounded-md p-3 pr-0 text-white"
								aria-label="Cerrar el menú"
							>
								<span
									class="sr-only mr-1 font-semibold uppercase tracking-wide text-white"
									>Cerrar</span
								>
								<svg
									class="h-6 w-6"
									stroke="currentColor"
									fill="none"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M6 18L18 6M6 6l12 12"></path>
								</svg>
							</button>
						</div>
					</div>
				</div>

				<!-- {% comment %} Content {% endcomment %} -->
				<div class="flex flex-col border-l border-white md:flex-row md:ml-20">
					<!-- {% comment %} Left Content {% endcomment %} -->
					<div class="border-white md:w-2/3 md:border-r">
						<div
							class="border-b border-white px-5 py-3 text-sm font-semibold uppercase tracking-wide text-white"
						>
							Menú
						</div>
						<a
							href="/" rel="home"
							class="block rounded-md px-3 py-2 text-3xl font-semibold uppercase tracking-tight text-white transition duration-150 ease-in-out hover:bg-transparent hover:text-palette-6 focus:bg-gray-100 focus:text-gray-800 focus:outline-none md:text-5xl lg:text-6xl"
							role="menuitem"
						>
							Inicio
						</a>
						<a
							href="/propuestas/"
							class="block rounded-md px-3 py-2 text-3xl font-semibold uppercase tracking-tight text-white transition duration-150 ease-in-out hover:bg-transparent hover:text-palette-6 focus:bg-gray-100 focus:text-gray-800 focus:outline-none md:text-5xl lg:text-6xl"
							role="menuitem"
						>
							Propuestas
						</a>
						<a
							href="/manifiesto/"
							class="block rounded-md px-3 py-2 text-3xl font-semibold uppercase tracking-tight text-white transition duration-150 ease-in-out hover:bg-transparent hover:text-palette-6 focus:bg-gray-100 focus:text-gray-800 focus:outline-none md:text-5xl lg:text-6xl"
							role="menuitem"
						>
							Manifiesto
						</a>
					</div>

					<!-- {% comment %} Right Content {% endcomment %} -->
					<div class="flex flex-col md:w-1/3">
						<div
							class="border-b border-t border-white px-5 py-3 text-sm font-semibold uppercase tracking-wide text-white md:border-t-0"
						>
							Enlaces externos
						</div>

						<div
							class="flex flex-1 flex-col py-2 md:divide-y md:divide-gray-300 md:py-0"
						>
							<a
								href="/"
								class="flex flex-1 items-center px-5 py-2 text-xl font-semibold text-white transition duration-150 ease-in-out hover:text-palette-6 focus:bg-gray-100 focus:text-gray-800 focus:outline-none md:py-6"
								role="menuitem"
								rel="external noopener noreferrer"
							>
								Firmar el manifiesto
							</a>
							<a
								href="/"
								class="flex flex-1 items-center px-5 py-2 text-xl font-semibold text-white transition duration-150 ease-in-out hover:text-palette-6 focus:bg-gray-100 focus:text-gray-800 focus:outline-none md:py-6"
								role="menuitem"
								rel="external noopener noreferrer"
							>
								Ver en YouTube
							</a>
						</div>
					</div>
				</div>

				<!-- {% comment %} Footer Content {% endcomment %} -->
				<div class="border-t border-b border-white">
					<div class="border-l border-white md:mx-20">
						<div
							class="flex flex-col items-center px-5 py-4 font-semibold uppercase tracking-wide text-white md:flex-row md:space-x-4"
						>
							<div>
								<span x-text="new Date().getFullYear()"></span>
								<a class="text-palette-6 hover:underline" href="/" rel="home"
									>Manifiesto por las madres</a
								>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

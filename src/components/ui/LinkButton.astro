---
export interface Props {
	href: string;
	text: string;
	important?: boolean;
}

const { href, text, important = false } = Astro.props;
---

<a
	href={href}
	class="relative inline-block w-full border border-black bg-transparent py-4 px-8 transition-shadow shadow-[#fff_4px_4px_0_0,#000_4px_4px_0_1px] hover:shadow-[#fff_0_0_0_0,#000_0_0_0_0]"
>
	{
		important && (
			<span class="absolute flex h-3 w-3 -top-1.5 -left-1.5">
				<span class="motion-safe:animate-ping absolute inline-flex h-full w-full rounded-full bg-black opacity-75" />
				<span class="relative inline-flex rounded-full h-3 w-3 bg-black" />
			</span>
		)
	}
	{text}
	<svg
		xmlns="http://www.w3.org/2000/svg"
		fill="none"
		viewBox="0 0 24 24"
		stroke-width="1.5"
		stroke="currentColor"
		class="inline w-8 h-8"
	>
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
	</svg>
</a>

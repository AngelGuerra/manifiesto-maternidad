---
import signatories from "../../data/signatories.json";
---

<section class="border-b border-b-black py-8">
	<h3 class="text-center text-4xl">
		Personas que ya han firmado el manifiesto
	</h3>

	<div
		class="grid grid-cols-2 items-center justify-center gap-4 py-8 font-serif md:grid-cols-3 md:text-lg"
	>
		{
			signatories.map((signatory) => (
				<span class="md:text-center">{signatory}</span>
			))
		}
	</div>
</section>

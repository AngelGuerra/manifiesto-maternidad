---
export interface Props {
	href: string;
	text: string;
}

const { href, text } = Astro.props;
---

<a
	href={href}
	class="flex gap-2 justify-center items-center border border-b-0 border-r-0 border-black bg-transparent py-4 px-8 md:border-r transition-shadow shadow-[#fff_-4px_-4px_0_0,#000_-4px_-4px_0_1px] hover:shadow-[#fff_0_0_0_0,#000_0_0_0_0]"
>
	{text}
	<svg
		xmlns="http://www.w3.org/2000/svg"
		fill="none"
		viewBox="0 0 24 24"
		stroke-width="1.5"
		stroke="currentColor"
		class="inline w-8 h-8"
	>
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
	</svg>
</a>
